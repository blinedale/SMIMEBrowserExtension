{
  "manifest_version": 2,
  "name": "S/MIME Signature Verification for Gmail and Inbox",
  "short_name": "S/MIME Signature Verification",
  "version": "@@build_version",
  "minimum_chrome_version": "52",
  "description": "Verifies S/MIME signed emails in Gmail. Made by Rocket Internet SE.",
  "homepage_url":"https://github.com/rocket-internet-berlin/RocketSMIMEBrowserExtension",
  "icons": {
    "16": "img/extension-16.png",
    "48": "img/extension-48.png",
    "64": "img/extension-64.png",
    "128": "img/extension-128.png"
  },
  "web_accessible_resources": [
    "img/*.png",
    "config.json"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*", "*://inbox.google.com/*"],
      "exclude_matches": ["*://mail.google.com/mail/mu/*"],
      "css": ["css/style.css"],
      "js": ["lib/inboxsdk.js", "content-scripts/cs-bundle.js"]
    }
  ],
  "browser_action": {
    "default_title": "S/MIME Signature Verification for Gmail",
    "default_icon": "img/extension-16.png",
    "default_popup": "components/aboutPopup.html"
  },
  "permissions": [
    "declarativeContent",
    "https://mail.google.com/*",
    "https://mail-attachment.googleusercontent.com/*"
  ]
}
